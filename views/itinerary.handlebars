<!--HEADER-->
<header id="masthead">
    <div class="container" id="titlehead"></div>
        <h1>ITINERARY</h1>   
    </div>
</header>
    <!--SIDEBAR: DO NOT REMOVE-->
   <div class="col-sm-3 col-md-2 sidebar" id="sidebar">
